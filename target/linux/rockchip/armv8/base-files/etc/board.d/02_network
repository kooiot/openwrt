#!/bin/sh

. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh
. /lib/functions/tlink.sh

rockchip_setup_interfaces()
{
	local board="$1"

	case "$board" in
	friendlyarm,nanopi-r2c|\
	friendlyarm,nanopi-r2c-plus|\
	friendlyarm,nanopi-r2s|\
	friendlyarm,nanopi-r4s|\
	friendlyarm,nanopi-r4s-enterprise|\
	friendlyarm,nanopi-r4se|\
	hinlink,opc-h66k|\
	xunlong,orangepi-r1-plus|\
	xunlong,orangepi-r1-plus-lts)
		ucidef_set_interfaces_lan_wan 'eth1' 'eth0'
		;;
	kooiot,tlink-r4x|\
	kooiot,tlink-r7)
		ucidef_set_interface_lan "eth0"
		ucidef_set_interface "lan1" device "eth1" protocol "static"
		ucidef_set_interface "lan2" device "eth2" protocol "static"
		ucidef_set_interface "lan3" device "eth3" protocol "static"
		;;
	kooiot,tlink-r4x-1)
		ucidef_set_interface_lan_wan "eth0" "eth1"
		;;
	firefly,rk3568-roc-pc)
		ucidef_set_interfaces_lan_wan 'eth0' 'eth1'
		;;
	hinlink,opc-h68k)
		ucidef_set_interfaces_lan_wan 'eth0 eth2 eth3' 'eth1'
		;;
	hinlink,opc-h69k)
		ucidef_set_interfaces_lan_wan 'eth1 eth2' 'eth0'
		;;
	friendlyarm,nanopi-r5c|\
	radxa,e25)
		ucidef_set_interfaces_lan_wan 'eth0' 'eth1'
		;;
	friendlyarm,nanopi-r5s)
		ucidef_set_interfaces_lan_wan 'eth1 eth2' 'eth0'
		;;
	*)
		ucidef_set_interface_lan 'eth0'
		;;
	esac
}

rockchip_setup_macs()
{
	local board="$1"
	local lan_mac=""
	local wan_mac=""
	local label_mac=""

	case "$board" in
	hinlink,opc-h66k|\
	hinlink,opc-h68k|\
	hinlink,opc-h69k|\
	firefly,rk3568-roc-pc|\
	friendlyarm,nanopi-r2c|\
	friendlyarm,nanopi-r2s)
		wan_mac=$(macaddr_generate_from_mmc_cid mmcblk0)
		lan_mac=$(macaddr_add "$wan_mac" 1)
		;;
	friendlyarm,nanopi-r2c-plus|\
	friendlyarm,nanopi-r4s|\
	friendlyarm,nanopi-r4se|\
	friendlyarm,nanopi-r5s)
		wan_mac=$(macaddr_generate_from_mmc_cid mmcblk1)
		lan_mac=$(macaddr_add "$wan_mac" 1)
		;;
	friendlyarm,nanopi-r4s-enterprise)
		wan_mac=$(get_mac_binary "/sys/bus/i2c/devices/2-0051/eeprom" 0xfa)
		lan_mac=$(macaddr_setbit_la "$wan_mac")
		;;
	friendlyarm,nanopi-r5c)
		wan_mac=$(macaddr_generate_from_mmc_cid mmcblk*)
		lan_mac=$(macaddr_add "$wan_mac" 1)
		;;
	xunlong,orangepi-r1-plus|\
	xunlong,orangepi-r1-plus-lts)
		wan_mac=$(macaddr_add "$(cat /sys/class/net/eth1/address)" -1)
		;;
	kooiot,tlink-r4x|\
	kooiot,tlink-r7)
		local mmc_cid_mac=$(macaddr_generate_from_mmc_cid mmcblk1)
		lan_mac=$(tlink_mac_mask "$mmc_cid_mac")
		echo "LAN MAC: "$lan_mac > /dev/kmsg
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan1" $(macaddr_add "$lan_mac" 1)
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan2" $(macaddr_add "$lan_mac" 2)
		[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan3" $(macaddr_add "$lan_mac" 3)
		;;
	esac

	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" $lan_mac
	[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" $wan_mac
	[ -n "$label_mac" ] && ucidef_set_label_macaddr $label_mac

	echo "Set Ethernet MAC done!" > /dev/kmsg
}

board_config_update
board=$(board_name)
rockchip_setup_interfaces $board
rockchip_setup_macs $board
board_config_flush

exit 0
