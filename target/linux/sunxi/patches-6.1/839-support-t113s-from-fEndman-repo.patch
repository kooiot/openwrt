+			if (!sspi->dbi_enabled)
+				spi_start_xfer(base_addr);
+			sunxi_spi_dma_tx_config(spi, t);
+		} else {
+			dprintk(DEBUG_INFO, "[spi%d] rx and tx -> by ahb\n", sspi->master->bus_num);
+			if ((rx_len == 0) || (tx_len == 0))
+				return -EINVAL;
+
+			if (!sspi->dbi_enabled)
+				spi_start_xfer(base_addr);
+			sunxi_spi_cpu_writel(spi, t);
+			sunxi_spi_cpu_readl(spi, t);
+		}
+		break;
+	}
+	default:
+		return -1;
+	}
+
+	return 0;
+}
